@model Pokemon_Capstone.Models.UserPO
@{
    ViewBag.Title = "LoginView";
}<h1 style="color: yellow; text-shadow: 2px 1px blue; font-family: 'Pokemon Solid'">Login</h1>
<br>
<h4 class="text-danger">Sorry, something went wrong. Username/Password was inncorect.</h4>
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-shadow: 1px 1px blue; color: yellow" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: yellow; text-shadow: 1px 1px blue" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" style="font-family: 'Pokemon Solid'; text-shadow: 1px 1px blue; color: yellow; background-color: black" />
                @Html.ActionLink("Register", "Register", "User", new { area = "" }, new { @class = " btn btn-default", @style = "font-family: pokemon solid; color: yellow; background-color: black; text-shadow: 1px 1px blue" })
            </div>
        </div>
    </div>
}
